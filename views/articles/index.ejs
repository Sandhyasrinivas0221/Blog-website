<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="./css/main.css">
    <link rel="stylesheet" href="./css/index.css">
    <title>Blog</title>
</head>
<body>
    <section class="py-0 text-center container">
        <div class="row py-lg-5">
          <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-light">Blogs</h1>
            <p class="lead text-body-secondary">Unlock new perspectives and ideas by exploring the wealth of knowledge in short articles.</p>
            <p>
              <a href="/articles/new" class="btn btn-primary my-1">New Article</a>
            </p>
          </div>
        </div>
      </section>
<!--Articles which are existing-->
<section>
    <div class="album mt-1">
        <div class="container">
          <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            <% articles.forEach(function(article){ %>
            <div class="col">
              <div class="card shadow-sm">
                <h2><%= article.title %></h2>
                <div class="card-body">
                  <p class="card-text"><%= article.description %></p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <a href="/articles/<%=article.slug %>" class="btn btn-sm btn-outline-secondary">View</a>
                      <a href="/articles/edit/<%=article.slug %>" class="btn btn-sm btn-outline-secondary">Edit</a>
                      <form action="/articles/<%= article.slug %>?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-outline-secondary">Remove</button>
                      </form>
                    </div>
                    <small class="text-body-secondary"><%= timeAgo(new Date(article.date)) %></small>
                  </div>
                </div>
              </div>
            </div>
            <%  }) %>;
            </div>
          </div>
          <%- include('partials/_footer') %> 
        </div>
    </section>
</body>
</html>