
<div class="form-group mb-3">
    <label for="title">Title</label>
    <input type="text" required name="title" id="title" spellcheck="true" class="form-control" value="<%= article.title %>">
</div>
<div class="form-group mb-3">
    <label for="description">Description</label>
    <textarea required name="description" id="description" spellcheck="true" class="form-control"  rows="3" ><%= article.description  %></textarea>
</div>
<div class="form-group mb-3">
    <label for="markDown">MarkDown</label>
    <textarea required name="markDown" id="markDown" spellcheck="true" class="form-control"  rows="7" ><%= article.markDown %></textarea>
</div>
<a href="/" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button> 
